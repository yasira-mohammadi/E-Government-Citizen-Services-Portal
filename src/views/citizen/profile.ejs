<% layout('layouts/main') -%>
<h1 class="text-3xl font-bold text-emerald-800 mb-6">Profile</h1>

<div class="card p-4">
  <h2 class="text-xl text-emerald-800 mb-3">Personal Information</h2>
  <p><strong>Name:</strong> <%= user.name %></p>
  <p><strong>Email:</strong> <%= user.email %></p>
  <p><strong>National ID:</strong> <%= user.national_id || 'N/A' %></p>
  <p><strong>Date of Birth:</strong> <%= user.date_of_birth ? new Date(user.date_of_birth).toLocaleDateString() : 'N/A' %></p>
  <p><strong>Contact Info:</strong> <%= user.contact_info || 'N/A' %></p>
  <p><strong>Role:</strong> <%= user.role %></p>
</div>