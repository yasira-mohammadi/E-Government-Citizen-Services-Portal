<% layout('layouts/main') -%>
<h1 class="text-3xl font-bold text-emerald-800 mb-6">Officer Dashboard</h1>

<div class="card p-4">
  <h2 class="text-xl text-emerald-800 mb-3">Department Requests</h2>
  <% if (requests && requests.length > 0) { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Request ID</th>
          <th>Service</th>
          <th>Department</th>
          <th>Status</th>
          <th>Submitted At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% requests.forEach(request => { %>
          <tr>
            <td><%= request.id %></td>
            <td><%= request.service_name %></td>
            <td><%= request.department_name %></td>
            <td><%= request.status %></td>
            <td><%= new Date(request.submitted_at).toLocaleString() %></td>
            <td>
              <a href="/officer/requests/<%= request.id %>" class="btn btn-sm btn-primary">View</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No requests found.</p>
  <% } %>
</div>